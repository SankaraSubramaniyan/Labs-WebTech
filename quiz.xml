<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<?xml-stylesheet type="text/xsl" href="quiz.xsl"?>

<!DOCTYPE quiz [
	<!ELEMENT quiz (title, items)>
	<!ELEMENT title (#PCDATA)>
	<!ELEMENT items (item)+>	
	<!ELEMENT item (question, answer, answer+)>
	<!ELEMENT question (#PCDATA)>
	<!ELEMENT answer (#PCDATA)>
	<!ATTLIST answer correct (yes) #IMPLIED>
]>

<quiz>
  <title>Demo quiz</title>
    <items>
      <item>
        <question>In which continent is the country Japan located?</question>
        <answer correct="yes">Asia</answer>
        <answer>Europe</answer>
        <answer>Africa</answer>
        <answer>America</answer>
      </item>
      <item>
        <question>Which one cannot swim?</question>
        <answer correct="yes">Cow</answer>
        <answer>Tuna</answer>
        <answer>Whale</answer>
        <answer>Lobster</answer>
      </item>		
      <item>
        <question>How many points are on a hexagon?</question>
        <answer correct="yes">6</answer>
        <answer>5</answer>
        <answer>7</answer>
        <answer>8</answer>
      </item>		
    </items>
</quiz>
